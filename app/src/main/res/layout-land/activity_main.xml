<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="58dp"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:layout_weight="1" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:text="Ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkMouth"
            android:layout_alignLeft="@+id/checkMouth"
            android:layout_alignStart="@+id/checkMouth"
            android:id="@+id/checkEars"
            android:onClick="CheckboxCheck"/>

        <CheckBox
            android:text="Eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkHat"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="63dp"
            android:layout_marginEnd="63dp"
            android:id="@+id/checkEyebrows"
            android:onClick="CheckboxCheck"/>

        <CheckBox
            android:text="Glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkEyes"
            android:layout_alignLeft="@+id/checkEyebrows"
            android:layout_alignStart="@+id/checkEyebrows"
            android:id="@+id/checkGlasses"
            android:onClick="CheckboxCheck"/>

        <CheckBox
            android:text="Mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkGlasses"
            android:layout_alignLeft="@+id/checkGlasses"
            android:layout_alignStart="@+id/checkGlasses"
            android:id="@+id/checkMustache"
            android:onClick="CheckboxCheck"/>

        <CheckBox
            android:text="Arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkEars"
            android:layout_alignLeft="@+id/checkMustache"
            android:layout_alignStart="@+id/checkMustache"
            android:id="@+id/checkArms"
            android:layout_below="@+id/checkMustache"
            android:onClick="CheckboxCheck"/>

        <CheckBox
            android:text="Shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkEars"
            android:layout_alignLeft="@+id/checkArms"
            android:layout_alignStart="@+id/checkArms"
            android:id="@+id/checkShoes"
            android:onClick="CheckboxCheck"/>

        <CheckBox
            android:text="Nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkNose"
            android:onClick="CheckboxCheck"
            android:layout_alignBaseline="@+id/checkMustache"
            android:layout_alignBottom="@+id/checkMustache"
            android:layout_alignLeft="@+id/checkEyes"
            android:layout_alignStart="@+id/checkEyes" />

        <CheckBox
            android:text="Mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkMouth"
            android:onClick="CheckboxCheck"
            android:layout_below="@+id/checkNose"
            android:layout_alignLeft="@+id/checkNose"
            android:layout_alignStart="@+id/checkNose" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="62dp"
            android:layout_toLeftOf="@+id/checkHat"
            android:layout_toStartOf="@+id/checkHat"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/body"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageBody" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hat"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageHat" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arms"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageArms" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ears"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageEars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyes"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageEyes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyebrows"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageEyebrows" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/glasses"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageGlasses" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mouth"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageMouth" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mustache"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageMustache" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nose"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageNose" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shoes"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageShoes" />


        </RelativeLayout>

        <CheckBox
            android:text="Hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkHat"
            android:onClick="CheckboxCheck"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_toLeftOf="@+id/checkEyebrows"
            android:layout_toStartOf="@+id/checkEyebrows" />

        <CheckBox
            android:text="Eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkEyes"
            android:onClick="CheckboxCheck"
            android:layout_below="@+id/checkHat"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
